{
  "name": "cv",
  "version": "0.0.1",
  "description": "",
  "main": "gulpfile.js",
  "repository": "https://github.com/Nasga/cv.git",
  "scripts": {
    "build:html": "mkdir -p dist && jade src/*.jade --out dist",
    "build:css": "mkdir -p dist/css && lessc src/less/screen.less dist/css/screen.css",
    "build:fonts": "mkdir -p dist/fonts && cp src/fonts/*.ttf dist/fonts && ttf2woff src/fonts/Roboto-Light.ttf dist/fonts/Roboto-light.woff",
    "build:images": "imagemin src/images dist/images -p",
    "build": "npm run build:html && npm run build:css && npm run build:fonts && npm run build:images",
    "watch:css": "onchange 'src/less/*.less' -- npm run build:css",
    "watch:html": "onchange 'src/*.jade' -- npm run build:html",
    "watch": "npm run watch:css && npm run watch:html",
    "serve": "browser-sync start --server dist --files 'dist/css/*.css, dist/*.html, dist/js/*.js'",
    "clean": "rm -rf dist",
    "start": "npm-run-all -p serve watch:css watch:html",
    "postinstall": "npm run build && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "SÃ©bastien ELET <sebastien@elet.fr>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "buildbranch": "~0.0",
    "connect-livereload": "~0.5",
    "del": "~1.1",
    "express": "~4.10",
    "gulp": "~3.8",
    "gulp-consolidate": "~0.1",
    "gulp-iconfont": "~1.0",
    "gulp-jade": "~0.10",
    "gulp-less": "~2.0",
    "gulp-livereload": "~3.2",
    "gulp-rm": "~1.0",
    "gulp-streamify": "~0.0",
    "gulp-ttf2eot": "~1.0",
    "gulp-ttf2woff": "^1.1.0",
    "gulp-util": "~3.0",
    "gulp-watch": "~3.0",
    "imagemin-cli": "^2.1.0",
    "jade": "~1.8",
    "less": "^2.6.1",
    "lodash": "~2.4",
    "npm-run-all": "^1.5.2",
    "onchange": "^2.1.2",
    "open": "~0.0",
    "parallelshell": "^2.0.0",
    "tiny-lr": "~0.1",
    "ttf2eot": "^2.0.0",
    "ttf2woff": "^2.0.1"
  }
}
